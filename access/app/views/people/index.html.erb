<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>First name latin</th>
      <th>Last name latin</th>
      <th>Email</th>
      <th>Position</th>
      <th>Department</th>
      <th>Scientific field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.first_name_latin %></td>
        <td><%= person.last_name_latin %></td>
        <td><%= person.email %></td>
        <td><%= person.position.description %></td>
        <td><%= person.department %></td>
        <td><%= person.scientific_field.description %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

