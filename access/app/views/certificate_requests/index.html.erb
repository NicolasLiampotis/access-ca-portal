<p id="notice"><%= notice %></p>

<h1>Listing Certificate Requests</h1>

<table>
  <thead>
    <tr>
      <th>UUID</th>
      <th>Status</th>
      <th>Owner</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificate_requests.each do |certificate_request| %>
      <tr>
        <td><%= certificate_request.uuid %>></td>
        <td><%= certificate_request.status %>></td>
        <td><%= certificate_request.owner_dn.subject_dn %>></td>
        <td><%= certificate_request.organization.name %>></td>
        <td><%= link_to 'Show', certificate_request %></td>
        <td><%= link_to 'Destroy', certificate_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

